# -*- mode: snippet -*-
# name: srcl
# key: srcl
# --
function source_local() {
    local file=\$1
    local DIR=
    local SOURCE="$\{BASH_SOURCE[0]\}"
    while [ -h "$SOURCE" ]; do 
        DIR="$( cd -P "$( dirname "$SOURCE" )" && pwd )"
        SOURCE="$(readlink "$SOURCE")"
        [[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE" 
    done
    DIR="$( cd -P "$( dirname "$SOURCE" )" && pwd )"
    source "$\{DIR\}/$\{file\}"
}